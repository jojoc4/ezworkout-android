<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.hearc.ezworkout">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.sync.NetworkErrorActivity"></activity>
        <activity android:name=".ui.planning.exerciseDetails.ExerciseDetails" />
        <activity android:name=".ui.planning.trainingDetails.TrainingDetails" />
        <activity
            android:name=".ui.planning.trainingPlanDetails.TrainingPlanDetails"
            android:label="@string/title_activity_tp_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.sync.ConnectActivity" />
        <activity android:name=".ui.activities.exercise.ExerciseActivity" />
        <activity
            android:name=".ui.activities.training.TrainingActivity"
            android:label="@string/title_activity_training" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".ui.sync.QRReader" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>